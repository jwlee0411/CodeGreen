<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textSiDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(시/도)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSiGunGu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(시/군/구)"
        app:layout_constraintStart_toEndOf="@+id/textSiDo"
        app:layout_constraintTop_toTopOf="@+id/textSiDo" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의 쓰레기 배출 정보를 안내해드립니다."
        app:layout_constraintStart_toEndOf="@+id/textSiGunGu"
        app:layout_constraintTop_toTopOf="@+id/textSiDo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLocationJumin" />

    <Button
        android:id="@+id/buttonLocationJumin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주민센터 위치찾기 "
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
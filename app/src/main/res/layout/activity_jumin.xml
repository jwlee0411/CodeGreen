<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="근처 주민센터 : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewJumin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(주민센터)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonContactJumin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연락하기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewJumin" />

    <Button
        android:id="@+id/buttonLocationJumin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치"
        app:layout_constraintStart_toEndOf="@+id/buttonContactJumin"
        app:layout_constraintTop_toBottomOf="@+id/textViewJumin" />
</androidx.constraintlayout.widget.ConstraintLayout>